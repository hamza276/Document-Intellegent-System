# OpenAI API Key (Required)
OPENAI_API_KEY=sk-your-api-key-here

# Redis URL (Optional - enables distributed caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_DIR=.storage

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300

# Async Processing
ASYNC_PROCESSING=true
MAX_WORKERS=4

# File Upload Limits
MAX_FILE_SIZE=52428800
